@page
@model Forma1Teams.Web.Pages.Teams.EditModel
@{
     ViewData["Title"] = "Csapat szerkesztés";
}
<form method="post">
    <input asp-for="@Model.ViewModel.Id" />
    <div class="form-group">
        <label asp-for="@Model.ViewModel.Name"></label>
        <input asp-for="@Model.ViewModel.Name" class="form-control" />
        <span asp-validation-for="@Model.ViewModel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ViewModel.YearOfFoundation"></label>
        <input asp-for="@Model.ViewModel.YearOfFoundation" class="form-control" />
        <span asp-validation-for="@Model.ViewModel.YearOfFoundation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ViewModel.WonChampionships"></label>
        <input asp-for="@Model.ViewModel.WonChampionships" class="form-control" />
        <span asp-validation-for="@Model.ViewModel.WonChampionships" class="text-danger"></span>
    </div>
        <div class="form-group">
        <input asp-for="@Model.ViewModel.PaidEntryFee" class=" class="form-check-input"" />
        <label asp-for="@Model.ViewModel.PaidEntryFee"></label>
        <span asp-validation-for="@Model.ViewModel.PaidEntryFee" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button class="btn btn-primary" type="submit">Mentés</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
